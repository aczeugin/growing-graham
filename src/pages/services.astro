---
import Layout from "./layouts/Layout.astro";

const packages = [
  {
    eyebrow: "Exterior",
    title: "Paint Correction",
    desc:
      "Defect removal and refinement for clarity and depth—executed with restraint for a clean, natural finish.",
    bullets: ["Decon wash + prep", "1–2 stage correction", "Gloss refinement + wipe-down"],
  },
  {
    eyebrow: "Protection",
    title: "Ceramic Protection",
    desc:
      "Long-term protection tuned for slickness and easier maintenance—ideal for daily-driven performance and luxury vehicles.",
    bullets: ["Panel prep", "Paint + wheel options", "Cure guidance + aftercare"],
  },
  {
    eyebrow: "Interior",
    title: "Interior Reset",
    desc:
      "A thorough, material-safe clean that restores calm—leather, carpets, plastics, vents, and glass.",
    bullets: ["Vacuum + deep clean", "Steam/safe extraction as needed", "Matte, factory-correct finish"],
  },
];

const addons = [
  { title: "Headlight restoration", desc: "Clarity restored; improved output and appearance." },
  { title: "Engine bay detail", desc: "Careful cleaning and dressing—no overspray, no shortcuts." },
  { title: "Wheel-off deep clean", desc: "Barrel, caliper, and inner fender attention." },
  { title: "Pet hair removal", desc: "Time-based add-on depending on severity." },
];
---

<Layout>
  <section class="bg-neutral-950 text-white">
    <div class="mx-auto max-w-7xl px-6 py-14 lg:px-10 lg:py-18">
      <p class="text-xs tracking-[0.3em] uppercase text-white/50">Services</p>

      <div class="mt-4 grid gap-10 lg:grid-cols-12 lg:items-end">
        <div class="lg:col-span-7">
          <h1 class="text-3xl font-semibold leading-tight md:text-5xl">
            Premium packages, built around results.
          </h1>
          <p class="mt-4 max-w-2xl text-white/70">
            Mobile detailing in McKinney and surrounding Collin County. Every service is designed to
            preserve materials, elevate gloss, and deliver a calm, finished look—without overdone shine.
          </p>
        </div>

        <div class="lg:col-span-5 lg:flex lg:justify-end">
          <a
            href="#contact"
            class="inline-flex w-full items-center justify-center rounded-full bg-white px-6 py-3 text-sm font-medium text-neutral-950 transition hover:bg-white/90 sm:w-auto"
          >
            Request a Quote
          </a>
        </div>
      </div>

<!-- Packages -->
<div class="mt-12 grid gap-6 lg:grid-cols-3">
  {packages.map((p) => (
    <article class="rounded-3xl border border-white/10 bg-white/5 p-6">
      <p class="text-xs tracking-[0.3em] uppercase text-white/50">{p.eyebrow}</p>
      <h2 class="mt-3 text-lg font-semibold">{p.title}</h2>
      <p class="mt-3 text-sm leading-relaxed text-white/70">{p.desc}</p>

      <ul class="mt-5 space-y-2 text-sm text-white/70">
        {p.bullets.map((b) => (
          <li class="flex gap-3">
            <span class="mt-2 h-1.5 w-1.5 flex-none rounded-full bg-white/40"></span>
            <span>{b}</span>
          </li>
        ))}
      </ul>

      <div class="mt-6">
        <a
          href="#contact"
          class="inline-flex items-center justify-center rounded-full border border-white/15 px-5 py-2.5 text-sm font-medium text-white/80 transition hover:border-white/30 hover:bg-white/5"
        >
          Get pricing
        </a>
      </div>
    </article>
  ))}
</div>

      <!-- Add-ons -->
      <div class="mt-14">
        <div class="flex items-end justify-between gap-6">
          <div>
            <p class="text-xs tracking-[0.3em] uppercase text-white/50">Add-ons</p>
            <h3 class="mt-3 text-2xl font-semibold md:text-3xl">
              Finishing touches, available on request.
            </h3>
          </div>
        </div>

        <div class="mt-8 grid gap-5 md:grid-cols-2">
          {addons.map((a) => (
            <div class="rounded-3xl border border-white/10 bg-white/5 p-6">
              <h4 class="text-base font-semibold">{a.title}</h4>
              <p class="mt-2 text-sm leading-relaxed text-white/70">{a.desc}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA -->
      <div id="contact" class="mt-14 rounded-3xl border border-white/10 bg-white/5 p-8">
        <div class="grid gap-6 lg:grid-cols-12 lg:items-center">
          <div class="lg:col-span-8">
            <h3 class="text-2xl font-semibold">Ready for a reset?</h3>
            <p class="mt-3 text-white/70">
              Send your vehicle, location, and what you’re looking for. I’ll reply with a clear recommendation and quote.
            </p>
          </div>
          <div class="lg:col-span-4 lg:flex lg:justify-end">
            <a
              href="/contact"
              class="inline-flex w-full items-center justify-center rounded-full bg-white px-6 py-3 text-sm font-medium text-neutral-950 transition hover:bg-white/90 sm:w-auto"
            >
              Contact
            </a>
          </div>
        </div>
      </div>

    </div>
  </section>
</Layout>
